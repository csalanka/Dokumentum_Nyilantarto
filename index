    <script>
        let records = [];
        let currentEditIndex = -1;

        const CATEGORY_ICONS = {
            'Hivatalos dokumentum': { icon: 'üìÑ' },
            'Oklev√©l': { icon: 'üéì' },
            'Sz√ºlet√©si anyak√∂nyvi kivonat': { icon: 'üë∂' },
            'H√°zass√°gi anyak√∂nyvi kivonat': { icon: '‚ù§Ô∏è' },
            'Halotti anyak√∂nyvi kivonat': { icon: 'üî•' },
            'F√©nyk√©p': { icon: 'üì∑' },
            'Kit√ºntet√©s': { icon: 'üèÜ' },
            'Munkaviszony igazol√°s': { icon: 'üíº' },
            'Ingatlan dokumentum': { icon: 'üè†' },
            'Levelez√©s': { icon: '‚úâÔ∏è' },
            'Szem√©lyes √≠r√°s': { icon: 'üìñ' },
            'Katonai dokumentum': { icon: 'üõ°Ô∏è' },
            'Egy√©b d√°tum': { icon: 'üìÖ' },
            'Jogi dokumentum': { icon: '‚öñÔ∏è' },
            'Eg√©szs√©g√ºgyi dokumentum': { icon: 'üíó' },
            '√öjs√°gcikk': { icon: 'üì∞' }
        };

        function getIconForCategory(category) {
            return CATEGORY_ICONS[category] || CATEGORY_ICONS['Hivatalos dokumentum'];
        }

        function generateDSZ() {
            if (records.length === 0) return 'D0001';
            const maxDSZ = Math.max(...records.map(r => parseInt(r.DSZ.replace('D', ''))));
            return `D${String(maxDSZ + 1).padStart(4, '0')}`;
        }

        function updateStats() {
            const count = records.length;
            document.getElementById('recordCount').textContent = count;
            document.getElementById('listCount').textContent = count;
            document.getElementById('downloadCount').textContent = count;
            document.getElementById('nextDSZ').textContent = generateDSZ();
            document.getElementById('btnDownload').disabled = count === 0;
            document.getElementById('btnPreview').disabled = count === 0;
        }

        function updateIconPreview() {
            const kategoria = document.getElementById('inputKategoria').value;
            const iconData = getIconForCategory(kategoria);
            document.getElementById('iconPreview').innerHTML = `<span style="font-size: 20px;">${iconData.icon}</span><span>Kiv√°lasztott ikon</span>`;
        }

        function updateEditIconPreview() {
            const kategoria = document.getElementById('editKategoria').value;
            const iconData = getIconForCategory(kategoria);
            document.getElementById('editIconPreview').innerHTML = `<span style="font-size: 20px;">${iconData.icon}</span><span>Kiv√°lasztott ikon</span>`;
        }

        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.getElementById('formTab').classList.add('hidden');
            document.getElementById('listTab').classList.add('hidden');
            if (tab === 'form') {
                document.querySelectorAll('.tab')[0].classList.add('active');
                document.getElementById('formTab').classList.remove('hidden');
            } else {
                document.querySelectorAll('.tab')[1].classList.add('active');
                document.getElementById('listTab').classList.remove('hidden');
                renderList();
            }
        }

        function addDocument() {
            const id = document.getElementById('inputID').value.trim();
            const dokNev = document.getElementById('inputDokNev').value.trim();
            const kategoria = document.getElementById('inputKategoria').value;
            if (!id || !dokNev || !kategoria) {
                alert('K√©rlek t√∂ltsd ki az ID, Dokumentum n√©v √©s Kateg√≥ria mez≈ëket!');
                return;
            }
            const newRecord = {
                ID: id,
                DSZ: generateDSZ(),
                DokNev: dokNev,
                Datum: document.getElementById('inputDatum').value,
                Kategoria: kategoria,
                Link: document.getElementById('inputLink').value.trim(),
                Leiras: document.getElementById('inputLeiras').value.trim(),
                Hely: document.getElementById('inputHely').value.trim()
            };
            records.push(newRecord);
            const savedID = id;
            document.getElementById('inputDokNev').value = '';
            document.getElementById('inputDatum').value = '';
            document.getElementById('inputKategoria').value = 'Hivatalos dokumentum';
            document.getElementById('inputLink').value = '';
            document.getElementById('inputLeiras').value = '';
            document.getElementById('inputHely').value = '';
            document.getElementById('inputID').value = savedID;
            updateIconPreview();
            updateStats();
            alert(`Dokumentum sikeresen hozz√°adva! DSZ: ${newRecord.DSZ}`);
        }

        function renderList() {
            const container = document.getElementById('documentList');
            if (records.length === 0) {
                container.innerHTML = '<div class="empty-state">M√©g nincs hozz√°adott dokumentum</div>';
                return;
            }
            container.innerHTML = '<div class="scroll-list">' + records.map((record, index) => {
                const iconData = getIconForCategory(record.Kategoria);
                return `<div class="list-item" onclick="openEditModal(${index})"><div class="list-content"><div class="list-icon" style="font-size: 24px;">${iconData.icon}</div><div class="list-text"><div class="list-title">${record.DSZ} - ${record.DokNev}</div><div class="list-meta">ID: ${record.ID} | ${record.Kategoria}</div>${record.Datum ? `<div class="list-meta">${record.Datum}</div>` : ''}</div></div></div>`;
            }).join('') + '</div>';
        }

        function downloadCSV() {
            if (records.length === 0) {
                alert('Nincs mentend≈ë rekord!');
                return;
            }
            const csv = Papa.unparse(records, {
                columns: ['ID', 'DSZ', 'DokNev', 'Datum', 'Kategoria', 'Link', 'Leiras', 'Hely']
            });
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const today = new Date().toISOString().split('T')[0];
            link.href = URL.createObjectURL(blob);
            link.download = `Doknyilvantarto_${today}.csv`;
            link.click();
        }

        function uploadCSV(event) {
            const file = event.target.files[0];
            if (!file) return;

            Papa.parse(file, {
                header: true,
                skipEmptyLines: true,
                complete: (results) => {
                    records = results.data;
                    updateStats();
                    alert(`${results.data.length} rekord sikeresen bet√∂ltve!`);
                    event.target.value = '';
                },
                error: (error) => {
                    alert('Hiba a CSV beolvas√°sakor: ' + error.message);
                    event.target.value = '';
                }
            });
        }

        function showPreview() {
            const dsz = document.getElementById('previewDSZ').value.trim();
            if (!dsz) {
                alert('Add meg a DSZ-t!');
                return;
            }
            const record = records.find(r => r.DSZ === dsz);
            if (!record) {
                alert('Nem tal√°lhat√≥ ilyen DSZ!');
                return;
            }
            const iconData = getIconForCategory(record.Kategoria);
            document.getElementById('previewContent').innerHTML = `
                <div class="preview-icon-box">
                    <div style="font-size: 48px;">${iconData.icon}</div>
                    <div><div style="font-weight: 600;">${record.Kategoria}</div><div style="font-size: 14px; color: #6b7280;">${record.DSZ}</div></div>
                </div>
                <div class="preview-item"><span class="preview-label">N√©v:</span><div class="preview-value">${record.DokNev}</div></div>
                <div class="preview-item"><span class="preview-label">ID:</span><div class="preview-value">${record.ID}</div></div>
                ${record.Datum ? `<div class="preview-item"><span class="preview-label">D√°tum:</span><div class="preview-value">${record.Datum}</div></div>` : ''}
                ${record.Hely ? `<div class="preview-item"><span class="preview-label">Hely:</span><div class="preview-value">${record.Hely}</div></div>` : ''}
                ${record.Leiras ? `<div class="preview-item"><span class="preview-label">Le√≠r√°s:</span><div class="preview-value">${record.Leiras}</div></div>` : ''}
                ${record.Link ? `<div class="preview-item"><span class="preview-label">Link:</span><div class="preview-value"><a href="${record.Link}" target="_blank" class="preview-link">${record.Link}</a></div></div>` : ''}
            `;
            document.getElementById('previewModal').classList.add('show');
        }

        function closePreview() {
            document.getElementById('previewModal').classList.remove('show');
        }

        function openEditModal(index) {
            currentEditIndex = index;
            const record = records[index];
            document.getElementById('editDSZ').value = record.DSZ;
            document.getElementById('editID').value = record.ID;
            document.getElementById('editDokNev').value = record.DokNev;
            document.getElementById('editDatum').value = record.Datum || '';
            document.getElementById('editKategoria').value = record.Kategoria;
            document.getElementById('editLink').value = record.Link || '';
            document.getElementById('editLeiras').value = record.Leiras || '';
            document.getElementById('editHely').value = record.Hely || '';
            updateEditIconPreview();
            document.getElementById('editModal').classList.add('show');
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.remove('show');
            currentEditIndex = -1;
        }

        function saveEdit() {
            if (currentEditIndex === -1) return;
            const id = document.getElementById('editID').value.trim();
            const dokNev = document.getElementById('editDokNev').value.trim();
            const kategoria = document.getElementById('editKategoria').value;
            if (!id || !dokNev || !kategoria) {
                alert('K√©rlek t√∂ltsd ki az ID, Dokumentum n√©v √©s Kateg√≥ria mez≈ëket!');
                return;
            }
            records[currentEditIndex] = {
                ID: id,
                DSZ: records[currentEditIndex].DSZ,
                DokNev: dokNev,
                Datum: document.getElementById('editDatum').value,
                Kategoria: kategoria,
                Link: document.getElementById('editLink').value.trim(),
                Leiras: document.getElementById('editLeiras').value.trim(),
                Hely: document.getElementById('editHely').value.trim()
            };
            closeEditModal();
            renderList();
            alert('Dokumentum sikeresen friss√≠tve!');
        }

        function deleteRecord() {
            if (currentEditIndex === -1) return;
            const record = records[currentEditIndex];
            if (confirm(`Biztosan t√∂rl√∂d ezt a dokumentumot?\n\n${record.DSZ} - ${record.DokNev}`)) {
                records.splice(currentEditIndex, 1);
                closeEditModal();
                updateStats();
                renderList();
                alert('Dokumentum t√∂r√∂lve!');
            }
        }

        function closeModalOnBackground(event) {
            if (event.target.id === 'previewModal') {
                closePreview();
            } else if (event.target.id === 'editModal') {
                closeEditModal();
            }
        }

        updateIconPreview();
        updateStats();
    </script>
</body>
</html>
